@using System.Web.UI.HtmlControls
@model Organizer.Domain.Entities.Task
@{
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";   
}

@using (Ajax.BeginForm("Delete", new {id=Model.Id}, new AjaxOptions() ))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title note_er">
           Удаление задачи "@Model.Description"
        </h4>
    </div>
    <div class="modal-body">
        <div class="alert alert-danger" ng-if="TaskDeletingError">
            Произошла ошибка при удалении задачи
        </div>

        <!-- Modal content-->

        Вы действительно хотите удалить задачу "@Model.Description"?

        <!-- /Modal content-->

    </div>

    <div class="modal-footer">
        
        <a class="btn-danger btn-lg" style="float: left; cursor: pointer;" ng-click="DeleteTask(@Model.Id)">Удалить</a>
         
        <button type="button" class="btn-lg btn-default" data-dismiss="modal">Отменить</button>
    </div>

}


